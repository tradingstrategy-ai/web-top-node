{
  "name": "typescript-npm-package-template",
  "version": "0.0.0-development",
  "description": "A template for creating npm packages using TypeScript and VSCode",
  "main": "./lib/src/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miohtama/typescript-npm-package-template.git"
  },
  "license": "MIT",
  "author": {
    "name": "Mikko Ohtamaa",
    "email": "miohtama@users.noreply.github.com",
    "url": "https://github.com/miohtama"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "monitoring",
    "http",
    "top"
  ],
  "bugs": {
    "url": "https://github.com/miohtama/typescript-npm-package-template/issues"
  },
  "homepage": "https://github.com/miohtama/typescript-npm-package-template#readme",
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/node": "^12.20.11",
    "@types/polka": "^0.5.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.2.0",
    "jest-expect-message": "^1.0.2",
    "lint-staged": "^10.5.4",
    "polka": "^0.5.2",
    "prettier": "^2.2.1",
    "semantic-release": "^19.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@miohtama/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@types/parseurl": "^1.3.1",
    "parseurl": "^1.3.3"
  }
}
